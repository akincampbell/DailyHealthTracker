<div>
  <div>
    <h1>
      List of all health checkins
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new health checkin
    </h2>

    <form action="/insert_health_checkin" method="post">
      <div>
        <input type="checkbox" id="water_box" name="query_water" value="1">

        <label for="water_box">Water</label>
      </div>

      <div>
        <input type="checkbox" id="grain_box" name="query_grain" value="1">

        <label for="grain_box">Grain</label>
      </div>

      <div>
        <input type="checkbox" id="protein_box" name="query_protein" value="1">

        <label for="protein_box">Protein</label>
      </div>

      <div>
        <input type="checkbox" id="fruit_box" name="query_fruit" value="1">

        <label for="fruit_box">Fruit</label>
      </div>

      <div>
        <input type="checkbox" id="vegetable_box" name="query_vegetable" value="1">

        <label for="vegetable_box">Vegetable</label>
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="weight_box">
          Weight
        </label>

        <input type="text" id="weight_box" name="query_weight">
      </div>

      <div>
        <input type="checkbox" id="exercise_box" name="query_exercise" value="1">

        <label for="exercise_box">Exercise</label>
      </div>

      <button>
        Create health checkin
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Water
        </th>

        <th>
          Grain
        </th>

        <th>
          Protein
        </th>

        <th>
          Fruit
        </th>

        <th>
          Vegetable
        </th>

        <th>
          User
        </th>

        <th>
          Weight
        </th>

        <th>
          Exercise
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_health_checkins.each do |a_health_checkin| %>
      <tr>
        <td>
          <%= a_health_checkin.id %>
        </td>

        <td>
          <%= a_health_checkin.water %>
        </td>

        <td>
          <%= a_health_checkin.grain %>
        </td>

        <td>
          <%= a_health_checkin.protein %>
        </td>

        <td>
          <%= a_health_checkin.fruit %>
        </td>

        <td>
          <%= a_health_checkin.vegetable %>
        </td>

        <td>
          <%= a_health_checkin.user_id %>
        </td>

        <td>
          <%= a_health_checkin.weight %>
        </td>

        <td>
          <%= a_health_checkin.exercise %>
        </td>

        <td>
          <%= time_ago_in_words(a_health_checkin.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_health_checkin.updated_at) %> ago
        </td>

        <td>
          <a href="/health_checkins/<%= a_health_checkin.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
